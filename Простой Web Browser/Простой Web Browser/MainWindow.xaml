<Window x:Class="Простой_Web_Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Простой_Web_Browser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

      <ToolBar HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="35" >
        <TextBox Height="20" Margin="5,2,0,0" Width="150" Text="Введите адрес сайта" Name="url" />
      <Button Content="Найти" Height="20" VerticalAlignment="Top" Width="50" Margin="5,5,0,0" Background="Green" Foreground="White" Click="Find" />
      </ToolBar>
      
    <WebBrowser Margin="0,34,0,0" Name="browser" />
        
    </Grid>
</Window>
